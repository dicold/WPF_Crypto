<Window x:Class="WPF_Crypto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Crypto"
        xmlns:viewmodels="clr-namespace:WPF_Crypto.ViewModels"
        mc:Ignorable="d"
        Title="Cryptocurrencies" Height="369" Width="645"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7.8" />
            <ColumnDefinition Width="72.2"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--#region Navigation bar -->
        <Grid Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="48" />
                <RowDefinition Height="48" />
                <RowDefinition />
                <RowDefinition Height="48" />
            </Grid.RowDefinitions>
            <!--#region Home button -->
            <Button 
                Grid.Row="0"
                ToolTip="Main Menu"
                x:Name="buttMain"
                Command="{Binding MainMenu_Click}"
                Cursor="Hand"
                Content="Home"/>
            <!--#endregion-->
            <!--#region Navigation buttons -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" Height="48">
                <Button
                    ToolTip="More Info"
                    Command="{Binding InfoMenu_Click}"
                    Cursor="Hand" Height="48"
                    Content="Info" RenderTransformOrigin="0.591,-1.503"/>
            </StackPanel>
            <!--#endregion-->
            <!--#region Exit button -->
            <Button 
                Grid.Row="2"
                ToolTip="Exit" 
                Tag="IsCloseButton"
                Command="{Binding Exit_Click}"
                Content="Exit"  Grid.RowSpan="2" Margin="0,209,0,0"/>
            <StackPanel Grid.Row="2"/>
            <!--#endregion-->
        </Grid>
        <!--#endregion-->

        <!--#region Content frame -->
        <Grid Grid.Column="2">
            <Frame Content="{Binding CurrentPage}"
            NavigationUIVisibility="Hidden" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </Grid>
        <!--#endregion-->
    </Grid>
</Window>
