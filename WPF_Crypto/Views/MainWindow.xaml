<Window x:Class="WPF_Crypto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Crypto" xmlns:viewmodels="clr-namespace:WPF_Crypto.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="64" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--#region Navigation bar -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="64" />
                <RowDefinition />
                <RowDefinition Height="64" />
            </Grid.RowDefinitions>
            <!--#region Home button -->
            <Button 
                Grid.Row="0"
                ToolTip="Main Menu"
                x:Name="buttMain"
                Command="{Binding MainMenu_Click}"
                Cursor="Hand"/>
            <!--#endregion-->
            <!--#region Navigation buttons -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <Button
                    ToolTip="Добавление данных, команда 'Insert'"
                    Command="{Binding InfoMenu_Click}"
                    Cursor="Hand" Height="53" />
            </StackPanel>
            <!--#endregion-->
            <!--#region Exit button -->
            <Button 
                Grid.Row="2"
                ToolTip="Exit" 
                Tag="IsCloseButton"
                Command="{Binding Exit_Click}"/>
            <!--#endregion-->
        </Grid>
        <!--#endregion-->

        <!--#region Content frame -->
        <Grid Grid.Column="1">
            <Frame
            Style="{DynamicResource modern_frame}"
            Content="{Binding CurrentPage}"
            NavigationUIVisibility="Hidden"
            Opacity="{Binding FrameOpacity}" Margin="0,169,0,0" />
        </Grid>
        <!--#endregion-->
    </Grid>
</Window>
