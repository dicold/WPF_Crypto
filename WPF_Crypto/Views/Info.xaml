<Page x:Class="WPF_Crypto.Views.Info"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Crypto.Views"
      mc:Ignorable="d" 
      d:DesignHeight="369"
      Title="Page1" Width="565">

    <Grid>
        <ComboBox
            HorizontalAlignment="Left"
            Margin="25,50,0,0"
            VerticalAlignment="Top"
            Width="195"
            IsEditable="True"
            ItemsSource="{Binding Path=Assets}"
            >
        </ComboBox>
        <TextBlock HorizontalAlignment="Left" Margin="25,25,0,0" TextWrapping="Wrap"
                   Text="Type in currency name or code to search more info about it." VerticalAlignment="Top"/>
        <Button Content="Get information"
                Command="{Binding GetInfo_Click}"
                HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Height="22" Width="115"/>

    </Grid>
</Page>
