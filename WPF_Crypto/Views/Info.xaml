<Page x:Class="WPF_Crypto.Views.Info"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Crypto.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450"
      Title="Page1" Width="710">

    <Grid>
        <TextBlock
            HorizontalAlignment="Left"
            TextWrapping="Wrap"
            Text="More info about Crypto[ID]"
            VerticalAlignment="Center"
            Foreground="Red" Height="108" Width="596" FontSize="48" RenderTransformOrigin="0,0" Margin="76,0,0,0">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.299"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.51"/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <Button Content="Button" Command="{Binding Test_Click}" HorizontalAlignment="Center" VerticalAlignment="Top" Height="34" Width="82" Cursor="Hand" Margin="0,257,0,0"/>
    </Grid>
</Page>
